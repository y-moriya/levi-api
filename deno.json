{
  "imports": {
    "@hono/": "https://deno.land/x/hono@v3.11.7/",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-env main.ts",
    "clear_test_data": "deno run --allow-net --allow-env scripts/clear_test_data.ts --yes",
    "test": "deno task clear_test_data && deno test --allow-net --allow-read --allow-env"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "options": {
      "lineWidth": 120,
      "indentWidth": 2
    }
  }
}
