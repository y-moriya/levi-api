# JWT secret key for authentication
JWT_SECRET=your-jwt-secret-key-here

# Server port number
PORT=8080

# Database settings
# Use 'postgresql' to enable Postgres repositories; otherwise 'memory'
DB_TYPE=memory

# Postgres connection URL (used by repositories/postgresql/pg-client.ts)
# Example for local Docker (host port 5443 mapped to container 5432):
POSTGRES_URL=postgres://postgres:postgres@localhost:5443/levi_api

# Optional granular DB params (referenced by config.ts)
DB_HOST=localhost
DB_PORT=5443
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=levi_api
DB_SSL=false

# Integration Test override: allow using Postgres under test runner
# When true, test mode will not force in-memory repository and migrations will run.
# Set alongside DB_TYPE=postgresql for IT.
IT_USE_POSTGRES=false